layout {
    cwd "~"
    default_tab_template {
        pane size=1 borderless=true {
            plugin location="https://github.com/dj95/zjstatus/releases/latest/download/zjstatus.wasm" {
                format_left   "{mode}"
                format_center "{tabs}"
                format_right  "#[fg=#7FBBB3,bg=#1E2326]#[bg=#7FBBB3,fg=#D3C6AA] {session} #[fg=#A7C080,bg=#7FBBB3]{command_hostname}#[fg=#A7C080]"
                format_space  "#[fg=#A7C080,bg=#272E33]"

                border_enabled  "false"

                hide_frame_for_single_pane "false"

                format_hide_on_overlength "true"
                format_precedence "clr"

                mode_normal        "#[fg=#A7C080]#[bg=#A7C080,fg=#D3C6AA] NORMAL #[fg=#A7C080,bg=#272E33]"
                mode_locked        "#[fg=#E67E80]#[bg=#E67E80,fg=#D3C6AA] LOCKED #[fg=#E67E80,bg=#272E33]"
                mode_resize        "#[fg=#A7C080]#[bg=#A7C080,fg=#D3C6AA] RESIZE #[fg=#A7C080,bg=#272E33]"
                mode_pane          "#[fg=#A7C080]#[bg=#A7C080,fg=#D3C6AA]  PANE  #[fg=#A7C080,bg=#272E33]"
                mode_tab           "#[fg=#A7C080]#[bg=#A7C080,fg=#D3C6AA]  TAB   #[fg=#A7C080,bg=#272E33]"
                mode_scroll        "#[fg=#A7C080]#[bg=#A7C080,fg=#D3C6AA] SCROLL #[fg=#A7C080,bg=#272E33]"
                mode_enter_search  "#[fg=#A7C080]#[bg=#A7C080,fg=#D3C6AA] SEARCH #[fg=#A7C080,bg=#272E33]"
                mode_search        "#[fg=#A7C080]#[bg=#A7C080,fg=#D3C6AA] SEARCH #[fg=#A7C080,bg=#272E33]"
                mode_rename_tab    "#[fg=#A7C080]#[bg=#A7C080,fg=#D3C6AA] RENAME #[fg=#A7C080,bg=#272E33]"
                mode_rename_pane   "#[fg=#A7C080]#[bg=#A7C080,fg=#D3C6AA] RENAME #[fg=#A7C080,bg=#272E33]"
                mode_session       "#[fg=#A7C080]#[bg=#A7C080,fg=#D3C6AA] SESSN  #[fg=#A7C080,bg=#272E33]"
                mode_move          "#[fg=#A7C080]#[bg=#A7C080,fg=#D3C6AA] MOVE   #[fg=#A7C080,bg=#272E33]"
                mode_prompt        "#[fg=#A7C080]#[bg=#A7C080,fg=#D3C6AA] PROMPT #[fg=#A7C080,bg=#272E33]"

                tab_normal   "#[fg=#495156,bg=#272E33]#[bg=#495156,fg=#859289] {name} #[fg=#495156,bg=#272E33]#[fg=#495156,bg=#272E33] "
                tab_active   "#[fg=#272E33]#[fg=#A7C080,bold] {name} #[fg=#272E33]#[fg=#495156,bg=#272E33] "

                command_hostname_command  "hostname"
                command_hostname_format "#[bg=#A7C080,fg=#D3C6AA] {stdout} "
                command_hostname_rendermode  "static"
                command_hostname_interval    "0"

                command_git_branch_command     "git rev-parse --abbrev-ref HEAD"
                command_git_branch_format      "#[fg=#7FBBB3] {stdout} "
                command_git_branch_interval    "10"
                command_git_branch_rendermode  "static"

                datetime        "#[fg=#859289,bold] {format} "
                datetime_format "%A, %d %b %Y %H:%M"
                datetime_timezone "America/New_York"
            }
        }
        children
    }
}
