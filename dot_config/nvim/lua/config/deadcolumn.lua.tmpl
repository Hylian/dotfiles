require('deadcolumn').setup({
    scope = 'line', ---@type string|fun(): integer
    ---@type string[]|fun(mode: string): boolean
    modes = function(mode)
        return mode:find('^[ictRss\x13]') ~= nil
    end,
    blending = {
        threshold = 0.75,
        {{ if ne .theme "dark" -}}
        colorcode = '#fffbef',
        {{- else -}}
        colorcode = '#272e33',
        {{- end }}
        hlgroup = { 'Normal', 'bg' },
    },
    warning = {
        alpha = 0.4,
        offset = 0,
        {{ if ne .theme "dark" -}}
        colorcode = '#fceced',
        {{- else -}}
        colorcode = '#4f5b58',
        {{- end }}
        hlgroup = { 'Error', 'bg' },
    },
    extra = {
        ---@type string?
        follow_tw = nil,
    },
})
