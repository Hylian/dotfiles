layout {
    cwd "~"
    default_tab_template {
        pane size=1 borderless=true {
            plugin location="https://github.com/dj95/zjstatus/releases/latest/download/zjstatus.wasm" {
                {{ if ne .theme "dark" -}}
                format_left   "{mode}"
                format_center "{tabs}"
                format_right  "#[fg=#3A94C5,bg=#FFFBEF]#[bg=#3A94C5,fg=#F2EFDF] {session} #[fg=#8DA101,bg=#3A94C5]{command_hostname}#[fg=#8DA101]"
                format_space  "#[fg=#8DA101,bg=#FFFBEF]"

                border_enabled  "false"

                hide_frame_for_single_pane "false"

                format_hide_on_overlength "true"
                format_precedence "clr"

                mode_normal        "#[fg=#8DA101]#[bg=#8DA101,fg=#F2EFDF] NORMAL #[fg=#8DA101,bg=#FFFBEF]"
                mode_locked        "#[fg=#F85552]#[bg=#F85552,fg=#F2EFDF] LOCKED #[fg=#F85552,bg=#FFFBEF]"
