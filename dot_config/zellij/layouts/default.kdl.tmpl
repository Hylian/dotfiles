                mode_tab           "#[fg=#8DA101]#[bg=#8DA101,fg=#F2EFDF]  TAB   #[fg=#8DA101,bg=#FFFBEF]"
                mode_scroll        "#[fg=#8DA101]#[bg=#8DA101,fg=#F2EFDF] SCROLL #[fg=#8DA101,bg=#FFFBEF]"
                mode_enter_search  "#[fg=#8DA101]#[bg=#8DA101,fg=#F2EFDF] SEARCH #[fg=#8DA101,bg=#FFFBEF]"
                mode_search        "#[fg=#8DA101]#[bg=#8DA101,fg=#F2EFDF] SEARCH #[fg=#8DA101,bg=#FFFBEF]"
                mode_rename_tab    "#[fg=#8DA101]#[bg=#8DA101,fg=#F2EFDF] RENAME #[fg=#8DA101,bg=#FFFBEF]"
                mode_rename_pane   "#[fg=#8DA101]#[bg=#8DA101,fg=#F2EFDF] RENAME #[fg=#8DA101,bg=#FFFBEF]"
                mode_session       "#[fg=#8DA101]#[bg=#8DA101,fg=#F2EFDF] SESSN  #[fg=#8DA101,bg=#FFFBEF]"
                mode_move          "#[fg=#8DA101]#[bg=#8DA101,fg=#F2EFDF] MOVE   #[fg=#8DA101,bg=#FFFBEF]"
                mode_prompt        "#[fg=#8DA101]#[bg=#8DA101,fg=#F2EFDF] PROMPT #[fg=#8DA101,bg=#FFFBEF]"

                tab_normal   "#[fg=#F8F5E4,bg=#FFFBEF]#[bg=#F8F5E4,fg=#BEC5B2] {name} #[fg=#F8F5E4,bg=#FFFBEF]#[fg=#F8F5E4,bg=#FFFBEF] "
                tab_active   "#[fg=#FFFBEF,bg=#FCECED]#[fg=#5C6A72,bg=#FCECED] {name} #[fg=#FFFBEF,bg=#FCECED]#[fg=#FCECED,bg=#FFFBEF] "

                command_hostname_command  "hostname -s"
                command_hostname_format "#[bg=#8DA101,fg=#F2EFDF] {stdout} "
                command_hostname_rendermode  "static"
                command_hostname_interval    "0"

                datetime        "#[fg=#F2EFDF,bold] {format} "
                datetime_format "%A, %d %b %Y %H:%M"
                datetime_timezone "America/New_York"
                {{- else -}}
