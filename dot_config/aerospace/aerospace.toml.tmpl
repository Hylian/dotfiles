config-version = 2

start-at-login = true

after-startup-command = [
#'exec-and-forget borders',
#'exec-and-forget sketchybar'
]

automatically-unhide-macos-hidden-apps = true

enable-normalization-flatten-containers = true
enable-normalization-opposite-orientation-for-nested-containers = true

# Mouse follows focus when focused monitor changes
#on-focused-monitor-changed = ['move-mouse window-lazy-center']
#on-focus-changed = ['move-mouse window-lazy-center']

# All possible keys:
# - Letters.        a, b, c, ..., z
# - Numbers.        0, 1, 2, ..., 9
# - Keypad numbers. keypad0, keypad1, keypad2, ..., keypad9
# - F-keys.         f1, f2, ..., f20
# - Special keys.   minus, equal, period, comma, slash, backslash, quote, semicolon, backtick,
#                   leftSquareBracket, rightSquareBracket, space, enter, esc, backspace, tab
# - Keypad special. keypadClear, keypadDecimalMark, keypadDivide, keypadEnter, keypadEqual,
#                   keypadMinus, keypadMultiply, keypadPlus
# - Arrows.         left, down, up, right

# All possible modifiers: cmd, alt, ctrl, shift

[mode.main.binding]
cmd-enter = "exec-and-forget open -n /Applications/Ghostty.app"
{{- if eq .chezmoi.hostname "shined-mac" -}}
cmd-semicolon = "exec-and-forget open -n /Applications/Ghostty.app --args -e zsh -c ~/dotfiles/scripts/ssh/desktop.sh"
{{- end -}}
{{ if eq .chezmoi.hostname "fbkpro" -}}
cmd-shift-q = 'exec-and-forget open -n /Applications/Zen\ Browser.app'
{{- end }}

cmd-h = ['focus --boundaries all-monitors-outer-frame --boundaries-action stop left', 'move-mouse window-lazy-center']
cmd-j = ['focus --boundaries all-monitors-outer-frame --boundaries-action stop down', 'move-mouse window-lazy-center']
cmd-k = ['focus --boundaries all-monitors-outer-frame --boundaries-action stop up', 'move-mouse window-lazy-center']
cmd-l = ['focus --boundaries all-monitors-outer-frame --boundaries-action stop right', 'move-mouse window-lazy-center']

cmd-shift-h = ['move --boundaries all-monitors-outer-frame left', 'move-mouse window-force-center']
cmd-shift-j = ['move --boundaries all-monitors-outer-frame down', 'move-mouse window-force-center']
cmd-shift-k = ['move --boundaries all-monitors-outer-frame up', 'move-mouse window-force-center']
cmd-shift-l = ['move --boundaries all-monitors-outer-frame right', 'move-mouse window-force-center']

cmd-ctrl-h = 'move-node-to-monitor --focus-follows-window left'
cmd-ctrl-l = 'move-node-to-monitor --focus-follows-window right'

cmd-left = 'workspace prev'
cmd-right = 'workspace next'

cmd-shift-f = 'fullscreen'

cmd-shift-ctrl-f = 'layout floating tiling'
cmd-leftSquareBracket = 'layout tiles horizontal vertical'
cmd-rightSquareBracket = 'layout h_accordion'

cmd-backtick = 'workspace-back-and-forth'

cmd-1 = 'workspace 1'
cmd-2 = 'workspace 2'
cmd-3 = 'workspace 3'
cmd-4 = 'workspace 4'
cmd-5 = 'workspace 5'
cmd-6 = 'workspace 6'
cmd-7 = 'workspace 7'
cmd-8 = 'workspace 8'
cmd-9 = 'workspace 9'
cmd-0 = 'workspace 10'

cmd-shift-1 = 'move-node-to-workspace 1'
cmd-shift-2 = 'move-node-to-workspace 2'
cmd-shift-3 = 'move-node-to-workspace 3'
cmd-shift-4 = 'move-node-to-workspace 4'
cmd-shift-5 = 'move-node-to-workspace 5'
cmd-shift-6 = 'move-node-to-workspace 6'
cmd-shift-7 = 'move-node-to-workspace 7'
cmd-shift-8 = 'move-node-to-workspace 8'
cmd-shift-9 = 'move-node-to-workspace 9'
cmd-shift-0 = 'move-node-to-workspace 10'

cmd-ctrl-c = 'reload-config'

cmd-alt-r = 'mode resize'

[mode.resize.binding]
h = 'resize width -50'
j = 'resize height +50'
k = 'resize height -50'
l = 'resize width +50'
enter = 'mode main'
esc = 'mode main'

[gaps]
inner.horizontal = 4
inner.vertical =   4
outer.left =       [{monitor.'built-in' = 6}, 4]
outer.bottom =     [{monitor.'built-in' = 6}, 4]
outer.top =        [{monitor.'built-in' = 6}, 4]
outer.right =      [{monitor.'built-in' = 6}, 4]

{{ if eq .chezmoi.hostname "fbkpro" -}}
[[on-window-detected]]
    if.app-id = 'app.zen-browser.zen'
    if.during-aerospace-startup = true
    check-further-callbacks = false
    run = ['move-node-to-workspace 1']

[[on-window-detected]]
    if.app-id = 'com.mitchellh.ghostty'
    if.during-aerospace-startup = true
    check-further-callbacks = false
    run = ['move-node-to-workspace 2']

[[on-window-detected]]
    if.app-id = 'org.whispersystems.signal-desktop'
    check-further-callbacks = false
    run = ['move-node-to-workspace 3']

[[on-window-detected]]
    if.app-id = 'com.hnc.Discord'
    check-further-callbacks = false
    run = ['move-node-to-workspace 3']
{{- end }}

{{ if eq .chezmoi.hostname "midnight-future" -}}
[[on-window-detected]]
    if.app-id = 'org.whispersystems.signal-desktop'
    run = 'move-node-to-workspace 1'

[[on-window-detected]]
    if.app-id = 'org.hnc.Discord'
    run = 'move-node-to-workspace 1'

[[on-window-detected]]
    if.app-id = 'com.apple.Safari.WebApp.C7EF0105-CFB8-41B2-8600-DE9993EF2A80'
    run = 'move-node-to-workspace 2'

[[on-window-detected]]
    if.app-id = 'app.zen-browser.zen'
    run = 'move-node-to-workspace 4'

[[on-window-detected]]
    if.app-id = 'com.apple.mail'
    run = 'move-node-to-workspace 10'
{{ end }}

[[on-window-detected]]
    if.app-id = 'com.1password.1password'
    run = 'layout floating'

[workspace-to-monitor-force-assignment]
{{ if eq .chezmoi.hostname "fbkpro" -}}
1 = 'main'
2 = 'main'
3 = ['secondary', 'main']
4 = ['secondary', 'main']
5 = ['secondary', 'main']
{{ else if eq .chezmoi.hostname "midnight-future" -}}
1 = 1
2 = 1
3 = 1
4 = 2
5 = 2
6 = 2
7 = 2
8 = 3
9 = 3
10 = 3
{{ end -}}

