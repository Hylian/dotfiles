[global]
{{ if eq .chezmoi.hostname "natura" }}
monitor = DP-2
{{ end }}
{{ if eq .chezmoi.hostname "shined3" }}
monitor = 1
{{ end }}
origin = bottom-right
follow = none
width = 240
offset = 4x4
separator_color = foreground
separator_height = 0
font = PragmataPro 11
mouse_left_click = close_current
mouse_middle_click = do_action, close_current
mouse_right_click = close_all
max_icon_size = -1
icon_path = ""
padding = 12
horizontal_padding = 14
text_icon_padding = 0
format = "<b>%s</b>\n\n%b"
vertical_alignment = top
alignment = left

corner_radius = 0
frame_width = 0
frame_color = "#00000000"
background = "#fffbefa0"
foreground = "#5c6a72f0"

[urgency_low]
timeout = 1

[urgency_normal]
timeout = 2

[urgency_critical]
timeout = 10
